{
  "name": "folders-protocol",
  "packageManager": "yarn@4.9.2",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  },
  "scripts": {
    "test:services:up": "sudo docker compose up -d --build --wait",
    "test:services:down": "sudo docker compose down -v --remove-orphans",
    "test": "yarn test:hdfs && yarn test:presto && yarn test:hive",
    "test:hdfs": "yarn workspace folders-hdfs test",
    "test:presto": "yarn workspace folders-presto test",
    "test:hive": "yarn workspace folders-hive test"
  }
}
